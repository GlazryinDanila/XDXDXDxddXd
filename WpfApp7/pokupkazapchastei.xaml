        <Button Content="выход" HorizontalAlignment="Left" Margin="455,314,0,0" VerticalAlignment="Top" Width="310" Height="30" Background="{x:Null}" Foreground="#FFFFF300" FontSize="14" Click="Button_Click_3"/>

